extends layout.pug

append head
    link(rel='stylesheet' type='text/css' href='/public/css/footer.css')
    link(rel='stylesheet' type='text/css' href='/public/css/add-review.css')
    link(rel='stylesheet' type='text/css' href='/public/css/header.css')
    script(src='/public/js/edit-review.js' type='module' defer)

block content
    .body-content-container
        .body-header-container
            h3(class='body-header-container__item body-header-container__item--text')
        .body-book-container
            img(class='book-container__item book-container__item--cover')
            .book-container__text-container
                h4(class='book-container__text-item book-container__text-item--title'): a(class='book-title__link')
                h5(class='book-container__text-item book-container__text-item--authors'): a(class='book-authors__links')
        form
            .body-rating-shelf-container
                .body-rating-container
                    p(class='rating-container__text rating-container__text--my-rating') My rating:
                    .stars
                        <svg class='star-off' xmlns="http://www.w3.org/2000/svg" width="108" height="110">
                        <path id='star-1' d="M54,5 86,105 1,43H107L22,105" fill="#808080"/>
                        </svg>
                        <svg class='star-off' xmlns="http://www.w3.org/2000/svg" width="108" height="110">
                        <path id='star-2' d="M54,5 86,105 1,43H107L22,105" fill="#808080"/>
                        </svg>
                        <svg class='star-off' xmlns="http://www.w3.org/2000/svg" width="108" height="110">
                        <path id='star-3' d="M54,5 86,105 1,43H107L22,105" fill="#808080"/>
                        </svg>
                        <svg class='star-off' xmlns="http://www.w3.org/2000/svg" width="108" height="110">
                        <path id='star-4' d="M54,5 86,105 1,43H107L22,105" fill="#808080"/>
                        </svg>
                        <svg class='star-off' xmlns="http://www.w3.org/2000/svg" width="108" height="110">
                        <path id='star-5' d="M54,5 86,105 1,43H107L22,105" fill="#808080"/>
                        </svg>
                .body-shelves-container
                    label(for='bookshelves') Bookshelves:
                    .shelves-container__select-container
                        select(class='shelves-container__select' id='bookshelves')
                .review-content-container
                    label(for='content') What did you think?
                    textarea(class='review-container__item review-container__item--content' name='content' id='content' placeholder='Enter your review')
                .submit-container
                    button(type="submit") Post